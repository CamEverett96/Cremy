    },
	{
      "type": "header",
      "content": "Section Bottom Spacing"
    },
    {
      "type": "range",
      "id": "section_bottom_spacing_desktop",
      "label": "Desktop",
      "min": 0,
      "max": 70,
      "step": 10,
      "default": 70
    },
    {
      "type": "range",
      "id": "section_bottom_spacing_mobile",
      "label": "Mobile",
      "min": 0,
      "max": 50,
      "step": 10,
      "default": 30
    }
  ],
"blocks": [
    {
      "type": "product_tab",
      "name": "Products Block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Product Tab Title"
        },
        {
          "id": "collection",
          "type": "collection",
          "label": "Collection"
        },
        {
          "type": "checkbox",
          "id": "show_view_all",
          "label": "Enable \"View all\" button if collection has more products than shown",
          "default": true
        }
	  ]
    }
  ],
  "presets": [
    {
      "name": "Product With Banner",
	  "blocks": [
        {
          "type": "product_tab"
        }
      ]
    }
  ]
}
