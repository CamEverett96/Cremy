<div class="{% if section.settings.showseperator %}border-top-bottom{% endif %}">
<div class="page-width manufacture-main">
  <div class="manufacture-block">
    {% if section.blocks.size > 0 %}
    <div class="manufacture-carousel manufacture-carousel-{{ section.id }} owl-carousel slider-with-options owl-theme logo-bar"
         data-small="2" 
         data-mobile="3" 
         data-tablet="4" 
         data-laptop="5"  
         data-desktop="6"
         data-autoplaytimeout="5000"
         data-autoplay="false"
         data-nav="true"
         data-dots="false"
         data-loop="true">
      {% for block in section.blocks %}
      <div class="logo-bar__item" {{ block.shopify_attributes }}>
        {% if block.settings.link != blank %}
        <a href="{{ block.settings.link }}" class="logo-bar__link">
          {% endif %}
          {% if block.settings.image != blank %}
          <img class="lazyload" data-src="{{ block.settings.image | img_url: 'master' }}" alt="Brand Logo">
          {% else %}
          {{ 'logo' | placeholder_svg_tag: 'ishi-placeholder' }}
          {% endif %}
          {% if block.settings.link != blank %}
        </a>
        {% endif %}
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
</div>
</div>

<style type="text/css">
    #shopify-section-{{ section.id }}{
    margin-bottom: {{ section.settings.section_bottom_spacing_desktop }}px;
  }
  #shopify-section-{{ section.id }} .border-top-bottom{
    padding: {{ section.settings.manufacture_padding }}px 0;
  }
  @media (max-width: 767px) {
      #shopify-section-{{ section.id }}{
      margin-bottom: {{ section.settings.section_bottom_spacing_mobile }}px;
    }
  }
</style>


{% schema %}
  {
    "name": "Manufacture Block",
    "tag": "section",
    "class": "ishi-manufacture-section",
    "max_blocks": 20,
    "settings": [
   {
          "type": "checkbox",
          "id": "showseperator",
          "default": false,
          "label": "Show seperator"
    },
   {
        "type": "header",
        "content": "Section Top-Bottom Internal Spacing"
    },
    {
        "type": "range",
        "id": "manufacture_padding",
        "min": 0,
        "max": 70,
        "step": 10,
        "label": "Internal Space/Padding",
        "default": 0
      },
 	 {
        "type": "header",
        "content": "Section Bottom Spacing"
      },
     {
        "type": "range",
        "id": "section_bottom_spacing_desktop",
        "label": "Desktop",
        "min": 0,
        "max": 70,
        "step": 5,
        "default": 70
      },
      {
        "type": "range",
        "id": "section_bottom_spacing_mobile",
        "label": "Mobile",
        "min": 0,
        "max": 70,
        "step": 10,
        "default": 30
      }
    ],
    "blocks": [
      {
        "type": "logo_image",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Brand Image",
            "info": "Size: 200px X 60px"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Manufacture Block",
        "blocks": [
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          }
        ]
      }
    ]
  }
{% endschema %}
